!RBJustSendsSuperRule methodsFor:'accessing'!

group
        ^ 'Unnecessary Code'
!

name
	^ 'Method just sends super message'
!

rationale
	^ 'Check for methods that just forward the message to its superclass. These methods can be removed.'
!

severity
        ^ SeverityInformation
! !

!RBJustSendsSuperRule methodsFor:'initialization'!

initialize
    super initialize.
    matcher := ParseTreeSearcher justSendsSuper
! !

!RBJustSendsSuperRule methodsFor:'running'!

checkMethod: aContext
    |parseTree|

    "a quick rejector, to avoid many parses (because parsing is very slow)"
    (aContext sourceCode includesString: 'super') ifFalse:[^ self]. 

    parseTree := aContext parseTree.
    (parseTree isPrimitive not 
    and: [ matcher executeMethod: parseTree initialAnswer: false ]) ifTrue: [ 
        result 
            addClass: aContext selectedClass
            selector: aContext selector 
    ]
! !

