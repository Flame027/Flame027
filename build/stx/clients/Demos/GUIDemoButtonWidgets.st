!GUIDemoButtonWidgets methodsFor:'aspects'!

labelChannel

    |holder|

    (holder := builder bindingAt:#labelChannel) isNil ifTrue:[
        builder aspectAt:#labelChannel put:(holder :=  ValueHolder new).
    ].
    ^ holder
!

radioGroup

    |holder|

    (holder := builder bindingAt:#radioGroup) isNil ifTrue:[
        builder aspectAt:#radioGroup put:(holder :=  RadioButtonGroup new).
    ].
    ^ holder

! !

