!GUIDemoSubCanvasDynamic methodsFor:'change & update'!

update:something with:aParameter from:changedObject
    "radiogroup might change
    "
    |model value appl cls|

    model := self radioGroup.

    changedObject == model ifFalse:[
        ^ super update:something with:aParameter from:changedObject
    ].
    value := model value.
    self showCR:'radio group changed to: ', value.

    value == #app1 ifTrue:[
        cls := self class
    ] ifFalse:[
        value == #app2 ifTrue:[cls := GUIDemoMenu]
                      ifFalse:[cls := GUIDemoFileSelectionTree]
    ].

    self showCR:'start application: ', cls name asString.
    self applicationHolder value:(cls new).
