mimeType
    "returns the mimeType assigned to the file
    "
    mimeType isNil ifTrue:[
        mimeType := FileBrowser iconKeyForFile:(self fileName).
        mimeType isNil ifTrue:[ mimeType := #unknown ].
    ].
    ^ mimeType
!

mustReadImage
    ^ icon isNil and:[ self isFileImage ]
