updateContents
    |name cont|

    name := self fileHolder value asFilename.
    name isDirectory ifFalse:[
        cont := name contents.
        self fileContentsHolder value:cont
    ]

    "Created: 11.9.1997 / 02:03:46 / cg"
    "Modified: 11.9.1997 / 02:09:35 / cg"
