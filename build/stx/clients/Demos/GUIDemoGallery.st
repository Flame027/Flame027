!GUIDemoGallery methodsFor:'aspects'!

canvasSelectionHolder
    "keeps the specification of the current selected widget or nil
    "
    |holder|

    (holder := builder bindingAt:#canvasSelectionHolder) isNil ifTrue:[
        holder := AspectAdaptor new subject:self; forAspect:#canvasSelection.
        builder aspectAt:#canvasSelectionHolder put:holder.
    ].
    ^ holder


!

canvasSelectorsHolder
    "returns a list containing the selectors to access the window specification
     dependent on the tab pressed
    "
    ^ self class slices collect:[:aSlice| aSlice last ]

!

tabListHolder
    "returns a list containing the tab labels
    "
    ^ self class slices collect:[:aSlice| aSlice first ]

!

tabSelectionHolder
    "keeps the label of the current selected tab or nil
    "
    |holder|

    (holder := builder bindingAt:#tabSelectionHolder) isNil ifTrue:[
        holder := AspectAdaptor new subject:self; forAspect:#tabSelection.
        builder aspectAt:#tabSelectionHolder put:holder.
    ].
    ^ holder


! !

!GUIDemoGallery methodsFor:'selection'!

canvasSelection
    "gets the window specification of the current selected widget or nil
    "
    ^ canvasSelection


!

canvasSelection:aSpec
    "current selected widget changed
    "
    canvasSelection := aSpec.

    aSpec notNil ifTrue:[
        self showCR:'widget changed: ', aSpec name
    ] ifFalse:[
        self showCR:'no widget selected'
    ].


!

tabSelection
    "gets the label of the current selected tab or nil
    "
    ^ tabSelection

!

tabSelection:aTabLabel
    "current selected tab changed
    "
    tabSelection := aTabLabel.

    tabSelection notNil ifTrue:[
        self showCR:'tab selection changed to :', tabSelection
    ] ifFalse:[
        self showCR:'no tab selected'
    ]

