!GUIDemoGallery methodsFor:'actions'!

middleButtonPressed
    "middle button in the canvas view is pressed
    "
    |number|

    self showCR:'middle button is pressed; open a menu'.
    number := self class menu decodeAsLiteralArray startUp.
    self showCR:'selected menu entry number: ', number printString.

