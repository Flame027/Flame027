<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <description>Simple Workspace to evaluate code</description>
    <display-name>Workspace</display-name>


    <servlet>
        <servlet-name>EvaluatorServlet</servlet-name>
        <servlet-class>stx.libjava.stworkspace.EvaluatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EvaluatorServlet</servlet-name>
        <url-pattern>/evaluator</url-pattern>
	</servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/static</url-pattern>
	</servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
	</session-config>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
